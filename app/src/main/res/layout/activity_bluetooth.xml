<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pit_scout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="10sp"
    tools:context="Bluetooth_Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/bluetooth"  />

    <TextView
        android:id="@+id/lbl_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:text="Status"
        android:textColor="@color/brightblue"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="30dp"
        android:text="On/Off" />

    <Switch
        android:id="@+id/switch_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="25dp"
        android:text="BT" />


    // @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
    <LinearLayout
        android:id="@+id/lin_Dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/lbl_Dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device:"
        android:textSize="14sp"
        android:textColor="@color/white"  />

        <TextView
            android:id="@+id/txt_Device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/green"
            android:text="Device name Selected" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_Dev"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listView_bonded"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/txt_UUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="00:00:00:00:00:00"
            android:textColor="@color/red" />

</LinearLayout>

    // @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
    // @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@

</RelativeLayout>

